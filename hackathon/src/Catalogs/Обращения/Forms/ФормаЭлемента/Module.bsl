			Объект.Приоритет = ВыбранноеЗначение; 
		ИначеЕсли ТипЗнч(ВыбранноеЗначение) = Тип("ПеречислениеСсылка.ТональностьОбращений") Тогда 
			Объект.Тональность = ВыбранноеЗначение;	
		КонецЕсли;
	КонецЕсли;
